{
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/api/index.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/index.html"
    }
  ]
}
